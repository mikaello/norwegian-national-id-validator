{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "Node16",
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "examples/test.ts"
  ]
}
